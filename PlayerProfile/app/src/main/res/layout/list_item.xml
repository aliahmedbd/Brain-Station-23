<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:padding="3dp"
    android:id="@+id/list_layout"
    android:background="#cccccc"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/img_player"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/s"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_playerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Name:"/>
        <TextView
            android:id="@+id/txt_test_highScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Test High Score:"/>

        <TextView
            android:id="@+id/txt_test_average"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Test Average:"/>

        <TextView
            android:id="@+id/txt_odi_highScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="ODI High Score:"/>

        <TextView
            android:id="@+id/txt_odi_average"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="ODI Average:"/>

    </LinearLayout>







</LinearLayout>
