<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back">


    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="#1cb0ef"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/internet"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Internet Explorer"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="#e76d10"
                android:orientation="vertical"
                android:padding="2dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/shopping"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Store"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

            </LinearLayout>





        </LinearLayout>



    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="#0b611b"
                android:orientation="vertical"
                android:padding="2dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="File\nExplorer"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="4"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/explorer"
                    android:layout_weight="5"

                    android:layout_marginBottom="3dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="#1cb0ef"
                android:orientation="vertical"
                android:padding="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/setting"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Control Panel"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="4"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

            </LinearLayout>




        </LinearLayout>



    </TableRow>



      <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="#acacac"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/desktop"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Desktop"
                android:textColor="#cdcdcd"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="-30dp"/>


        </LinearLayout>



    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="#4ce22e"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/stocks"
                android:layout_weight="1"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Stocks"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:layout_weight="1"
                />


        </LinearLayout>



    </TableRow>

</TableLayout>